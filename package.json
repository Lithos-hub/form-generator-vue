{
	"name": "vue-form-latte",
	"private": false,
	"version": "0.0.2",
	"type": "module",
	"files": [
		"dist",
		"src/components/"
	],
	"main": "./dist/vue-form-latte.umd.cjs",
	"module": "./dist/vue-form-latte.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/vue-form-latte.js",
			"require": "./dist/vue-form-latte.umd.cjs"
		},
		"./dist/style.css": {
			"import": "./dist/tailwind.css",
			"require": "./dist/tailwind.css"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Lithos-hub/vue-form-latte.git"
	},
	"keywords": [
		"form",
		"generator",
		"form-generator",
		"vue3",
		"vue",
		"vuejs",
		"tailwindcss"
	],
	"scripts": {
		"dev": "vite",
		"build": "vite build && vue-tsc --emitDeclarationOnly && npm run build-tailwind",
		"build-tailwind": "npx tailwindcss -i ./src/style.css -o ./dist/tailwind.css --postcss --minify",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint": "eslint src --ext .ts,.vue",
		"lint:fix": "eslint src --ext .ts,.vue --fix"
	},
	"dependencies": {
		"vue": "^3.3.11",
		"vue-form-latte": "^0.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.17",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitejs/plugin-vue": "^4.5.2",
		"@vue/eslint-config-typescript": "^12.0.0",
		"autoprefixer": "^10.4.17",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-vue": "^9.21.1",
		"postcss": "^8.4.35",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"tailwindcss": "^3.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.8",
		"vue-eslint-parser": "^9.4.2",
		"vue-tsc": "^1.8.25"
	}
}
